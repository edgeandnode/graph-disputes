{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2020",
    "lib": ["es2018", "dom"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "composite": false,
    "sourceMap": false,
    "strict": false
  },
  "include": [
    "src/*.ts",
    "src/commands/*.ts",
    "src/commands/**/*.ts",
    "src/commands/**/**/*.ts"
  ],
  "exclude": []
}
